<!DOCTYPE html>
<html lang="en">
  <head>
    <title>StudyPlanner - {{title}}</title>
    {{>head}}
  </head>
  <body>
    <div id="content">
      {{>page_header}}
      {{>left_nav}}
      <div id="app-content">
          {{{body}}}
      </div>
      {{>page_footer}}
    </div>
  <script type="application/javascript">
    $(document).ready(function () {

      $.each($('.nav').find('li'), function() {
        $(this).toggleClass('active',
            '/' + $(this).find('a').attr('href') == window.location.pathname);
      });

    });
  </script>
  </body>
</html>
